<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:spinnerDropDownItemStyle">@style/CustomSpinnerDropdown</item>
        <item name="android:spinnerItemStyle">@style/CustomSpinnerDropdown</item>
    </style>

    <style name="CustomSpinnerDropdown" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/YourCustomDropDownItemTextStyle</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="YourCustomDropDownItemTextStyle" parent="@android:style/Widget">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
